/**
 * Implements hook_cron().
 */
function og_ext_cron_cron() {
  // clear proactive disclosure view caches
  CronFunctions::clear_view_caches();

  $jobQueue = Drupal::queue(CronQueueWorker::$QUEUE_NAME);
  $jobQueue->createQueue();
  // export dataset comments
  $jobQueue->createItem(['cron_function' => 'export_external_comments']);
  // export dataset ratings
  $jobQueue->createItem(['cron_function' => 'export_cumulative_dataset_ratings']);
  // export suggested datasets
  $jobQueue->createItem(['cron_function' => 'export_suggested_datasets']);
  // generate inventory vote count json file
  $jobQueue->createItem(['cron_function' => 'generate_vote_count_json_file']);
  // generate ATI informal requests CSV file
  $jobQueue->createItem(['cron_function' => 'generate_ati_requests_csv_file']);

